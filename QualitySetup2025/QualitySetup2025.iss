function IsPortInUse(Port: String): Boolean;
var
  ResultCode: Integer;
begin
  // M√©todo usando netstat (funciona em qualquer Windows)
  if Exec(ExpandConstant('{cmd}'), 
          '/C netstat -ano | find /C ":' + Port + '" | find /V "0"', 
          '', 
          SW_HIDE, 
          ewWaitUntilTerminated, 
          ResultCode) then
  begin
    Result := (ResultCode = 0);
  end
  else
  begin
    Result := False;
  end;
end;


