  if RegQueryStringValue(HKLM, 'Software\Microsoft\Windows\CurrentVersion\Uninstall\' + AppId,
     'QuietUninstallString', UninstallString) then
  begin
    Log('Executando uninstaller padr√£o: ' + UninstallString);
    if Exec(RemoveQuotes(UninstallString), '', '', SW_HIDE, ewWaitUntilTerminated, ResultCode) then
    begin
      if ResultCode = 0 then
        Log('Desinstala√ß√£o padr√£o conclu√≠da com sucesso')
      else
        Log('Desinstala√ß√£o padr√£o retornou c√≥digo: ' + IntToStr(ResultCode));
    end
    else
    begin
      Log('Falha ao executar o uninstaller padr√£o, tentando modo normal...');
      if RegQueryStringValue(HKLM, 'Software\Microsoft\Windows\CurrentVersion\Uninstall\' + AppId,
         'UninstallString', UninstallString) then
